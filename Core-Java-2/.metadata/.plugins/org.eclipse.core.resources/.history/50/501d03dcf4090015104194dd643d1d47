package interviewTasks;

import java.util.Arrays;

public class BinarySearch {
	public static void main(String[] args) {
		int[] sortedArr = { 1, 3, 4, 5, 11, 15, 24, 26, 29 };
		System.out.println(binarySearch(sortedArr, 4));

	}

	static boolean binarySearch(int[] arr, int wantedKey) {
		int start =0;
		int end = arr.length;
		while (start<=end) {
			int middle = (start+end)/ 2;
			if (wantedKey == arr[middle]) {
				return true;
			} else if (wantedKey < arr[middle]) {
				binarySearch(Arrays.copyOfRange(arr, 0, middle+1), wantedKey);
			} else if (wantedKey < arr[middle]) {
				binarySearch(Arrays.copyOfRange(arr, middle, arr.length), wantedKey);
			}

		}
		return false;
	}
}

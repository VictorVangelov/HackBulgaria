package CourseTasks;

import java.util.LinkedList;
import java.util.Queue;

public class BlockingQueue {

	static Queue<String> myQueue = new LinkedList<String>();
	static boolean isEmpty = true;
	static String polledString;

	public static void main(String[] args) throws InterruptedException {
		Thread adder = new Thread() {
			public void run() {
				for (;;) {
					synchronized (myQueue) {
						while (!isEmpty) {
							try {
								System.out.println("before whait");
								myQueue.wait();
							} catch (InterruptedException e) {
							}
						}
						isEmpty = false;
						myQueue.add("Text by Adder");
						myQueue.notifyAll();
					}
				}
			}
		};
		Thread poller = new Thread() {
			public void run() {
				for (;;) {
					synchronized (myQueue) {
						while (!isEmpty) {
							try {
								myQueue.wait();
							} catch (InterruptedException e) {
							}
						}
						polledString= myQueue.poll();
						System.out.println("I polled from the queue, and now its empty");
						isEmpty = true;
						myQueue.notifyAll();
					}
				}
			}
		};

		adder.start();
		poller.start();
		
		
	}
}

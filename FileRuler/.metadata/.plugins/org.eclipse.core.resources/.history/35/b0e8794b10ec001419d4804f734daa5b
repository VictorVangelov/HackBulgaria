package com.hackbulgaria.fileruler;

import java.net.URL;
import java.nio.file.Path;
import java.nio.file.attribute.FileTime;
import java.util.ArrayList;
import java.util.HashMap;

public class Image {

	final String name;
	public  Path path;
	public URL url;
	final int width;
	final int height;
	final FileTime createdDate;
	final HashMap<String, Double> imaggaTags;
	ArrayList<String> fileRulerTags;

	public HashMap<String, Double> getImaggaTags() {
		return imaggaTags;
	}
	public void addTagInFileRuler(String tag){
		this.fileRulerTags.add(tag);
	}

	public Image(URL url, Path path, String name, int width, int height,
			FileTime createdDate, HashMap<String, Double> imaggaTags) {
		this.path = path;
		this.url = url;
		this.name = name;
		this.width = width;
		this.height = height;
		this.createdDate = createdDate;
		this.imaggaTags = imaggaTags;
		this.fileRulerTags = new ArrayList<String>();
	}
	public String getName() {
		return name;
	}
	public Path getPath() {
		return path;
	}
	public URL getUrl() {
		return url;
	}
	public int getWidth() {
		return width;
	}
	public int getHeight() {
		return height;
	}
	public FileTime getCreatedDate() {
		return createdDate;
	}
	public ArrayList<String> getFileRulerTags() {
		return fileRulerTags;
	}
}
